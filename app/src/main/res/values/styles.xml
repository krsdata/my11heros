<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_app" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_black_24dp</item>

    </style>

    <style name="dashboard_theme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="document_verify_text" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/tunga</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ground_player_size_style">
        <item name="android:width">@dimen/_135sdp</item>
        <item name="android:height">@dimen/_35sdp</item>
    </style>

    <style name="ground_style_info">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="ground_style_players_info">
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
    </style>

    <style name="dialog_theme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme_app">
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.MyApp.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlinedBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:theme">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText
        </item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>

    <!--@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense-->
    <!--@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox-->

    <style name="CustomDialog" parent="AppTheme_app" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>
