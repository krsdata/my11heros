<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/matches_view_top_margin"
    android:background="@color/light_grey_bg_opac"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/matches_view_left_margin_consolidated"
        android:layout_marginEnd="@dimen/matches_view_right_margin"
        android:fontFamily="@font/montserrat_bold"
        android:text="Mega Contest"
        android:textColor="@color/black"
        android:textSize="@dimen/header_size" />

    <TextView
        android:id="@+id/contest_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/matches_view_left_margin_consolidated"
        android:layout_marginEnd="@dimen/matches_view_right_margin"
        android:fontFamily="@font/open_sans_light"
        android:text="Get ready for mega winning!!"
        android:textColor="@color/black"
        android:textSize="@dimen/small_info_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_all_contest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/view_more_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/more_contest_click"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="View All"
            android:textAllCaps="false"
            android:layout_toStartOf="@+id/image_more"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/image_more"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:foregroundGravity="center"
            android:src="@drawable/right_arrow_angle" />
    </RelativeLayout>
</LinearLayout>